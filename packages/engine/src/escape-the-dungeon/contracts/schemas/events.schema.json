{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dungeonbreak.dev/schemas/events.schema.json",
  "title": "DungeonBreak Global Event Pack",
  "type": "object",
  "required": ["events"],
  "properties": {
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["eventId", "kind", "trigger", "message"],
        "properties": {
          "eventId": { "type": "string" },
          "kind": { "type": "string", "enum": ["deterministic", "emergent"] },
          "trigger": {
            "type": "object",
            "required": ["metric", "gte"],
            "properties": {
              "metric": { "type": "string", "enum": ["turn_index", "player_feature"] },
              "key": { "type": "string" },
              "gte": { "type": "number" }
            },
            "additionalProperties": false
          },
          "probability": { "type": "number", "minimum": 0, "maximum": 1 },
          "message": { "type": "string" },
          "traitDelta": { "type": "object", "additionalProperties": { "type": "number" } },
          "featureDelta": { "type": "object", "additionalProperties": { "type": "number" } },
          "globalEnemyLevelBonusDelta": { "type": "integer" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
